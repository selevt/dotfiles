##### environment settings

export LANG=en_US.UTF-8

# add scripts to PATH
export PATH=$PATH:~/dotfiles/scripts

# editor 
export EDITOR="vim"
export VISUAL="vim"

# set 256 color term (for pretty vim colors)
export TERM=xterm-256color


##### application settings
# java
export JDK_HOME=/usr/lib/jvm/java-6-sun

# python virtualenv
export WORKON_HOME=$HOME/.virtualenvs

# chrome settings
# - use native password store
# - enable vertical tabs when available,
# - disable restrictions on local file access
export CHROMIUM_USER_FLAGS="--password-store=detect --enable-vertical-tabs --allow-file-access-from-files"

if [ -f ~/dotfiles/sh/envlocal ] ; then
    source ~/dotfiles/sh/envlocal
fi
